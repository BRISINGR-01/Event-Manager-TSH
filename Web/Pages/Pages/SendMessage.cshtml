@page
@model Web.Pages.Pages.SendMessageModel
@{
    ViewData["title"] = "Send message";
}


<div>
    <form class="form-buttons d-flex align-items-center flex-column" method="post" enctype="multipart/form-data">
        <div class="field col-sm-3 col-8">
            <label asp-for="Title" class="form-label"></label>
            <span asp-validation-for="Title"></span>
            <input asp-for="Title" class="form-control">
        </div>
        <div class="field col-sm-3 col-8">
            <label asp-for="Message" class="form-label"></label>
            <span asp-validation-for="Message"></span>
            <textarea rows="5" asp-for="Message" type="text" class="form-control"></textarea>
        </div>

        <div class="d-flex flex-sm-row flex-column gap-5 m-3 align-items-center">
            <fieldset>
                <legend class="title mt-1">Receivers:</legend>
                <div class="form-check">
                    <label class="form-check-label" asp-for="SendToStudents">
                        Students
                    </label>
                    <input asp-for="SendToStudents" class="form-check-input" type="checkbox">
                </div>
                <div class="form-check">
                    <label class="form-check-label" asp-for="SendToStudentComitees">
                        Student-comitee
                    </label>
                    <input asp-for="SendToStudentComitees" class="form-check-input" type="checkbox">
                </div>
                <div class="form-check">
                    <label class="form-check-label" asp-for="SendToEventOrganizers">
                        Event organizer
                    </label>
                    <input asp-for="SendToEventOrganizers" class="form-check-input" type="checkbox">
                </div>
                <div class="form-check">
                    <label class="form-check-label" asp-for="SendToAdministrators">
                        Administrator
                    </label>
                    <input asp-for="SendToAdministrators" class="form-check-input" type="checkbox">
                </div>
            </fieldset>

            <fieldset>
                <legend>Channels</legend>
                <div class="form-check">
                    <label class="form-check-label" asp-for="SendEmail">
                        Email
                    </label>
                    <input asp-for="SendEmail" class="form-check-input" type="checkbox">
                </div>
                <div class="form-check">
                    <label class="form-check-label" asp-for="SendNotification">
                        Notification
                    </label>
                    <input asp-for="SendNotification" class="form-check-input" type="checkbox">
                </div>
            </fieldset>
        </div>
           <button type="submit" class="btn btn-dark mt-2 fs-5 px-5">Send</button>
    </form>
</div>